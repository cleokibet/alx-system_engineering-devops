global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend th3gr00t-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/letsencrypt/live/www.cleokibetcompany.tech/fullchain.pem 
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend th3gr00t-tech-backend

backend th3gr00t-tech-backend
	balance roundrobin
	server 273096-web-01 52.202.17.132:80 check
	server 273096-web-02 54.144.240.183:80 check
